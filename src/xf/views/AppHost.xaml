<ContentPage
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns="http://xamarin.com/schemas/2014/forms"
        Title="Search View"
        xmlns:AppHostViewModel="js-import-def:~src/view-models/AppHostViewModel"
        viewModel="${ this.resolve(AppHostViewModel) }">
    <ListView
        ItemsSource="[$viewModel.files]">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Label
                    Text="${$data.name}"
                    eventTapGesture="{{ () => $viewModel.openUrl($data) }"
                    />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
